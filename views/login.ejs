<body>
  <form action="/home">
    <div class="login text-center">
        <h1><b>LOGIN</b></h1>
        <div class="usernamepwd"></div>
        <div class="input">
            <input name="username" id="username" class="form-control" type="text" placeholder="Username">
        </div>
        <div class="input">
            <input name="password" id="password" class="form-control" type="password" placeholder="Password">
        </div>
        <button class="btn btn-primary btn-block" type="submit" style="margin-top: 30px;">Submit</button>
    </div>
</form>
</body>
